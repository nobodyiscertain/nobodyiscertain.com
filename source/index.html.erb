<div class="home__dos">
  <div class="container">
    <h2 class="h1">Proud Work</h2>
    <div class="flex-wrap">
      <div class="home__do-box">
        <figure>
          <a href="https://kajabi.com/" target="_blank">
            <%= image_tag "kajabi-logo.svg", alt: "Kajabi", width: "100%", style: "max-width:225px"%>
          </a>
        </figure>
