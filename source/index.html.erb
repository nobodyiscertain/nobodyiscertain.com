  <div class="container align-left">
    <h2 class="h1">From the Blog</h2>
    <ul class="blog-posts__list set-height-wrap">
      <% blog.articles.each do |article| %>
        <li class="set-height">
          <%= link_to article.title, article.url %>
          <p><%= article.data.description %></p>
        </li>
      <% end %>
      <li class="set-height"><%= link_to "Introducing Stag", "http://thisbythem.com/blog/introducing-stag-a-command-line-interface-for-statamic/" %>
